# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Application.index()
GET     /register               controllers.Application.register()
GET     /myevents               controllers.Application.myevents()
GET		/autoriseerimine		controllers.Application.autoriseerimine()
GET     /auth/:id               controllers.Application.auth(id: String)  

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file           controllers.Assets.at(path="/public", file)

POST    /login                  controllers.Application.authenticate()
POST    /register               controllers.Application.registerFormSubmit()
POST    /newevent               controllers.Application.newEventFormSubmit()
GET     /logout                 controllers.Application.logout()
