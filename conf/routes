# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Application.index()
GET     /register               controllers.RegistrationController.register()
GET     /myevents               controllers.EventsController.myevents()
GET		/twitter				controllers.TwitterController.twitter()
GET     /auth               	controllers.TwitterController.auth()
GET     /game               	controllers.GameController.game()
GET		/game/:x/:y				controllers.GameController.move(x: Integer, y: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file           controllers.Assets.at(path="/public", file)

POST    /login                  controllers.Application.authenticate()
POST    /register               controllers.RegistrationController.registerFormSubmit()
POST    /newevent               controllers.EventsController.newEventFormSubmit()
GET     /logout                 controllers.Application.logout()
